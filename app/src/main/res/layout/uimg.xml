<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/intro_2"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:clipToOutline="true">

<Button
    android:id="@+id/btn_primary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:backgroundTint="@null"
    android:background="@drawable/btn_primary2"
    android:layout_marginTop="387dp"
    android:layout_marginStart="33dp"
    android:text="@string/select_image"
    android:textAppearance="@style/select_imag"
    android:gravity="center_horizontal|center_vertical"

    android:textColor="@null">

</Button>
    <Button
        android:id="@+id/btn_primary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:background="@drawable/btn_primary"
        android:layout_marginTop="478dp"
        android:layout_marginStart="33dp"
        android:text="@string/upload_image"
        android:textAppearance="@style/feeds"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@null">
    </Button>

    <ImageButton
        android:id="@+id/icon_arrow_"
        android:layout_width="20dp"
        android:layout_height="14.28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/arrow"
        app:backgroundTint="@null"
        />
    <TextView
        android:id="@+id/upload_imag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/upload_image"
        android:textAppearance="@style/upload_imag"
        android:lineSpacingExtra="-8sp"
        android:gravity="center_horizontal|top"
        />
    <ImageView
        android:id="@+id/image_4"
        android:layout_width="215dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="199dp"

        />



</RelativeLayout>
